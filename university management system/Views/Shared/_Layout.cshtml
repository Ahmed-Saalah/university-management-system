<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .navbar-custom {
            background-color: #343a40;
            color: #ffffff;
        }
        .navbar-custom .nav-link {
            color: #ffffff;
            padding: 10px 15px;
        }
        .navbar-custom .nav-link:hover {
            background-color: #495057;
        }
        .navbar-custom .navbar-brand {
            color: #ffffff;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        @if (ViewBag.IsLoginPage == null || !(bool)ViewBag.IsLoginPage)
        {
            <nav class="navbar navbar-expand-lg navbar-custom">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">University Management System</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Student" asp-action="Index">Students</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Instructor" asp-action="Index">Instructors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Department" asp-action="Index">Departments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Course" asp-action="Index">Courses</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link" style="cursor:pointer; color:inherit;">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2024 - University Management System</p>
        </div>
    </footer>
</body>
</html>
